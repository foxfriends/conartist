<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cameldridge.conartist">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".ConventionListActivity" />
        <activity
            android:name=".ConventionModeActivity"
            android:parentActivityName=".MetaConventionActivity" />
        <activity
            android:name=".CreateRecordActivity"
            android:parentActivityName=".ConventionModeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cameldridge.conartist.ConventionModeActivity" />
        </activity>
        <activity
            android:name=".MetaConventionActivity"
            android:parentActivityName=".ConventionListActivity" />
        <activity
            android:name=".CreateExpenseActivity"
            android:label="@string/title_activity_create_expense"
            android:parentActivityName=".MetaConventionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cameldridge.conartist.MetaConventionActivity" />
        </activity>
    </application>

</manifest>